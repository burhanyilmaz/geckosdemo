{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./src",
    "paths": {},
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./**/*", "index.ts", "./node_modules/@types", "./typings"],
  "exclude": ["node_modules", "./**/*.spec.ts"]
}
